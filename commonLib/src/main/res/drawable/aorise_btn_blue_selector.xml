<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/aorise_size_4dp" />
            <gradient android:endColor="@color/aoriseBtnEnd" android:startColor="@color/aoriseBtn" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/aorise_size_4dp" />
            <gradient android:endColor="@color/aoriseBtnEnd" android:startColor="@color/aoriseBtn" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/aorise_size_4dp" />
            <gradient android:endColor="@color/aoriseBtnUnavailableEnd" android:startColor="@color/aoriseBtnUnavailable" />
        </shape>
    </item>
</selector>
